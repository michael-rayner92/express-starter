root = true

[*.{js,json,ts}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Use tabs for indentation (Makefiles require tabs)
[{Makefile,**.mk}]
indent_style = tab