{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/package-lock.json": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "eslint.validate": ["javascript", "typescript"],
  "conventionalCommits.scopes": [
    "ci/cd",
    "debugging",
    "configuration",
    "documentation",
    "authentication",
    "enhancement",
    "new feature"
  ],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#a3cdea",
    "activityBar.activeBorder": "#d6499c",
    "activityBar.background": "#a3cdea",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#d6499c",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#7ab6e0",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#519fd6",
    "titleBar.activeBackground": "#7ab6e0",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#7ab6e099",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#7ab6e0"
}
