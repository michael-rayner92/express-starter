{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "Node/Express with Mongo/Mongoose RESTful API with Multitenancy",
  "main": "src/server.ts",
  "engines": {
    "node": ">=14.x",
    "npm": ">=6.x"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "dev": "nodemon",
    "version": "npm version patch",
    "start": "npm run build && node -r tsconfig-paths/register build/server.js",
    "data:import": "ts-node --transpile-only ./src/seeder.ts",
    "data:destroy": "ts-node --transpile-only src/seeder.ts -d",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --color \"src/**/*.{js,json,ts}\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michael-rayner92/express-starter.git"
  },
  "keywords": [
    "Node",
    "Express",
    "Mongoose",
    "Mongo",
    "boiler",
    "REST",
    "API"
  ],
  "author": "Michael Rayner <michael@genspeakapp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michael-rayner92/express-starter/issues"
  },
  "homepage": "https://github.com/michael-rayner92/express-starter#readme",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/method-override": "0.0.31",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/mongoose": "^5.10.4",
    "@types/morgan": "^1.9.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "i18next": "^20.2.0",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  }
}
